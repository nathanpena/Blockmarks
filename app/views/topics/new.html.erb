 <h1>New Topic</h1>
 
 <div class="row">
   <div class="col-md-8">
     <%= form_for @topic do |t| %>
       <div class="form-group">
         <%= t.label :title %>
         <%= t.text_field :title, class: 'form-control', placeholder: "Enter topic title" %>
       </div>
       <div class="form-group">
         <%= t.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
