<div class="row">
  <div class="col-md-2">
    <h1>Topics</h1>
  </div>
  <div class="col-md-2">
    <%= link_to "New Topic", new_topic_path, class: 'btn btn-success btn-sm' %>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to topic.title, topic_path(topic) %> 
           <% if policy(topic).destroy? %>
          <%= link_to 'Delete', topic, method: :delete, class: 'btn btn-danger btn-xs' %> 
          <% end %>
        </h4>
      </div>
    </div>
    <% end %>
  </div>